import Header from '../components/Header.astro'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Compre los producto del hueco aquÃ­, con envio gratis y todo"
		/>
