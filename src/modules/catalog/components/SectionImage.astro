---
interface Props {
	title: string
	description: string
	image: string
}

const { title, description, image } = Astro.props
---

<section class="flex flex-col items-center text-center">
	<h1 class="text-4xl font-bold">{title}</h1>
	<p class="text-lg text-gray-500">
		{description}
	</p>
	<img
		class="rounded-lg object-cover w-full aspect-[3/1] mt-8"
		height="400"
		src={image}
		width="1200"
	/>
</section>
