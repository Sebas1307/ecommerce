---
interface Props {
    customerName: string
    customerImage: string
    customerReview: string
}

const {customerName, customerImage, customerReview} = Astro.props
---

<div class='flex flex-col items-center gap-4 p-4 border rounded-lg'>
    <span
     class='relative flex shrink-0 overflow-hidden rounded-full w-16 h-16 border'
    >
     <img
      class='aspect-square h-full w-full'
      alt='Customer 1'
      src={customerImage}
     />
    </span>
    <p class='text-center'>
     {customerReview}
    </p>
    <p class='font-semibold'>{customerName}</p>
   </div>