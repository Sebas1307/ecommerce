---
import AddToCard from './AddToCard.astro'

interface Props {
	id: number
	title: string
	description: string
	price: number
	images: string[]
}

const { id, title, description, price, images } = Astro.props
---

<div class="bg-white rounded-lg shadow-md mx-auto">
	<a
		href=`product/${id}`
		class="flex-shrink-0 hover:scale-105 transition-all duration-300"
	>
		<img
			src={images[0]}
			alt="Product Image"
			width="400"
			height="400"
			class="w-full h-64 object-cover"
			style="aspect-ratio: 400 / 400; object-fit: cover;"
		/>
	</a>
	<div class="px-6 py-4 truncate">
		<h2 class="text-xl font-bold text-gray-900">
			{title}
		</h2>
		<p class="text-gray-700 text-sm mt-1">
			{description}
		</p>
	</div>
	<div class="px-6 py-3 bg-gray-100">
		<span class="text-gray-900 font-semibold">${price}</span>
	</div>
	<div class="px-6 py-4">
		<AddToCard />
	</div>
</div>
