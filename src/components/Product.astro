---
import AddToCard from './AddToCard.astro'

interface Props {
	id: number
	productName: string
	productPrice: number
	productImage: string[]
}

const { id, productName, productPrice, productImage } = Astro.props
---

<div
	class="flex flex-col bg-white rounded-lg shadow-md overflow-hidden max-w-md mx-auto"
>
	<a href=`product/${id}` class="flex-shrink-0 hover:scale-105 transition-all duration-300">
		<img
			src={productImage[0]}
			alt="Product Image"
			width="400"
			height="400"
			class="w-full h-64 object-cover "
			style="aspect-ratio: 400 / 400; object-fit: cover;"
		/>
	</a>
	<div class="px-6 py-4">
		<h2 class="text-xl font-bold text-gray-900">
			{productName}
		</h2>
		<p class="text-gray-700 text-sm mt-1">
			This is a brief description of the product. It's a great product that you
			will love.
		</p>
	</div>
	<div class="px-6 py-3 bg-gray-100 ">
		<span class="text-gray-900 font-semibold"
			>${productPrice}</span
		>
	</div>
	<div class="px-6 py-4">
		<AddToCard />
	</div>
</div>
